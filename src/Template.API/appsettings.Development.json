{
  "Serilog": {
    "Using": [ "Serilog.Expressions" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System.Net.Http.HttpClient": "Information",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Elastic.Apm": "Error",
        "Microsoft.System.Data.SqlClient": "Information",
        "Microsoft.Microsoft.Data.SqlClient": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "Microsoft.AspNetCore.Http.Result.JsonResult": "Error"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '/ping%'"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console",
                "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Host=localhost;Database=TemplateDatabase;Username=postgres;Password=postgres;Port=5432;"
  },
  "ElasticConfiguration": {
    "Uri": "http://localhost:9200",
    "User": "", 
    "Password": ""
  },
  "ElasticApm": {
    "ServerUrl": "http://localhost:8200",
    "ServiceName": "ms-dotnet-template",
    "CaptureHeaders": true,
    "CaptureBody": "All",
    "LogLevel": "error",
    "TransactionIgnoreUrls": "/favicon.ico, *.hml, *.json, *.js, /_framework*, /_vs*, /docs*, /ping*",
    "TraceContinuationStrategy": "restart_external",
    "FlushInterval": "5s",
    "MaxQueueSize": 4096
  }
}
